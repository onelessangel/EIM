<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneDialerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_space"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/big_space"
            android:inputType="none" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/medium_space"
        android:columnCount="5"
        android:rowCount="4">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:text="@string/number_1" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:text="@string/number_2" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:text="@string/number_3" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:text="@string/number_4" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="4dp"
            android:text="@string/number_5" />

        <Button
            android:id="@+id/button6"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4dp"
            android:text="@string/number_6" />

        <Button
            android:id="@+id/button7"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:text="@string/number_7" />

        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4dp"
            android:text="@string/number_8" />

        <Button
            android:id="@+id/button9"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:text="@string/number_9" />

        <Button
            android:id="@+id/button0"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="4dp"
            android:text="@string/number_0" />

        <ImageButton
            android:id="@+id/answerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/transparent"
            android:src="@drawable/green_phone" />

        <Button
            android:id="@+id/buttonStar"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4dp"
            android:text="@string/character_star" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_marginEnd="@dimen/medium_space"
            android:background="@color/transparent" />

        <Button
            android:id="@+id/buttonDiez"
            style="@style/Widget.AppCompat.Button"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="4dp"
            android:text="@string/character_diez" />

        <ImageButton
            android:id="@+id/declineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@color/transparent"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/red_phone" />

        <ImageButton
            android:id="@+id/contactsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@color/transparent"
            android:src="@drawable/notebook_of_contacts" />
    </GridLayout>


</LinearLayout>